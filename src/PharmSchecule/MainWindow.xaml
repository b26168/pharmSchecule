<Window x:Class="PharmSchecule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmSchecule"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="480">
    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="西元年"/>
            <TextBox Width="50" Margin="5,0" x:Name="txb_year"/>
            <TextBlock Text="月"/>
            <TextBox Width="50" Margin="5,0" x:Name="txb_month"/>
            <TextBlock Text="人員A"/>
            <TextBox Width="50" Margin="5,0" x:Name="txb_A"/>
            <TextBlock Text="人員B"/>
            <TextBox Width="50" Margin="5,0" x:Name="txb_B"/>
        </StackPanel>
        <TextBlock Text="休假日(以逗號分隔)"/>
        <TextBox x:Name="txb_off"/>
        <TextBlock Text="A 指定休假(以逗號分隔, Ex. 1-1: 代表1號早班)"/>
        <TextBox x:Name="txb_Aoff"/>
        <TextBlock Text="B 指定休假(以逗號分隔, Ex. 1-1: 代表1號早班)"/>
        <TextBox x:Name="txb_Boff"/>
        <Button Content="產生" Click="Button_Click"/>
        <TextBox Height="450" x:Name="rtb"/>
        <Button Content="複製結果" Click="Button_Click_1"/>
    </StackPanel>
</Window>
